  body
    div.header
      div.header-left 内容配置平台
      div.header-right 创建 
    div.button button
    div.item-title
      div.name 项目名称
      input(class = "title input-content")
    div.item-title
      div.name 持有者
      input(class = "title input-content")
    div.all
      div.editer-input
        - for( var i=0; i<10; i++ )
          div.item
            div.input-title #{i+1}
            input.input-content(type="text")
        div.json(index='0'
          cj='0'
          show='false'
        ) xxx 
          div.json-before
          div.json-content
            - for( var i=0; i<4; i++ )
              div.item
                div.input-title json#{i+1}
                input.input-content(type="text")
            div.json(index='0'
              cj='0'
              show='false'
            ) xxx 
              div.json-before
              div.json-content
                - for( var i=0; i<4; i++ )
                  div.item
                    div.input-title json#{i+1}
                    input.input-content(type="text")
        div.json(index='1'
          cj='0'
          show='false'
        ) xxx 
          div.json-before
          div.json-content
